<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ty.ibest.mapper.AdminMapper">
	<resultMap id="BaseResult" type="com.ty.ibest.entity.Admin">
		<id column="admin_id" property="adminId"></id>
		<result column="phone" property="phone"></result>
	</resultMap>

	<select id="isLogin" resultMap="BaseResult">
		SELECT *
		FROM
		admin WHERE phone =
		#{phone} AND password = #{password}
	</select>
</mapper>